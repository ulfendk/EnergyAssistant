@using UlfenDk.EnergyAssistant.Config
@using UlfenDk.EnergyAssistant.Database
@using UlfenDk.EnergyAssistant.Repository
@namespace EnergyAssistant.Components

@inject EnergyAssistantRepository Repository

<MudCard Class="@Class">
    <MudCardHeader Style="background-color: rgb(0, 138, 139)">
       <MudLink Target="_blank" Href="https://www.energidataservice.dk"><MudImage Src="logos/eds-logo.png" Height="50" /></MudLink>
    </MudCardHeader>
@if (_settings == null)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
    <MudCardContent>
        <MudText Typo="Typo.body1" GutterBottom="true">EnergiDataService is the free Danish public API for energy prices.</MudText>
        <MudForm>
            <MudCheckBox @bind-Checked="_settings.IsEnabled" T="bool" Label="Enabled"/>
        </MudForm>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="(async () => await OnSaveClickedAsync())">Save</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Reset</MudButton>
    </MudCardActions>
}
</MudCard>

@code {
    [Parameter]
    public string Class { get; set; } = "";

    private EnergiDataServiceSettings? _settings;
    
    protected override async Task OnInitializedAsync()
    {
        _settings = await Repository.GetEnergiDataServiceSettingsAsync();

        await base.OnInitializedAsync();
    }

    private async Task OnSaveClickedAsync()
    {
        await Repository.UpdateEnergiDataServiceSettingsAsync(s =>
        {
            s.IsEnabled = _settings!.IsEnabled;
        });
    }

}